@model LoginConfirmModel
@{
	ViewData["Title"] = "Login";
}
<h1>@ViewData["Title"]</h1>

<div>
	<p>OnlineUserCount: @ViewBag.OnlineUserCount</p>
</div>

<div>
	<form asp-controller="Account" asp-action="Login">
		<div class="form-group">
			@Html.LabelFor(model => model.Email, new { @class = "sr-only", @for = "Email" })
			@Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Email:" , @id="Email" })
			@Html.ValidationMessageFor(model => model.Email)
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.Password, new { @class = "sr-only", @for = "Password" })
			@Html.TextBoxFor(model => model.Password, new { @class = "form-control", @placeholder = "Password" , @id="Password" })
			@Html.ValidationMessageFor(model => model.Password)
		</div>

		<br />
		<div>
			<button type="submit" class="btn btn-primary">Login</button>
			<a href="/Account/Logout" class="btn btn-danger">Logout</a>
		</div>

	</form>
</div>
<br />
<div>
	<a href="/Account/Register" class="link-success">Register.</a>
	<br />
	<a href="/Account/ResetActivationCode" class="link-warning">I forgot my password.</a>
</div>